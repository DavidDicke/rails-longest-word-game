<div class="container">
  <div class="row d-flex justify-content-center m-5">
    <div class="col-9 d-flex justify-content-center p-2">
      <h2>New game</h2>
    </div>
    <div class="col-9 d-flex justify-content-between p-2 mt-5">
      <% @letters.each do |letter| %>
      <div class="border-2 p-4 bg-success">
        <h3 class="text-white m-1 font-monospace"><%= letter.capitalize %></h3>
      </div>
      <% end %>
    </div>
    <div class="col-9 d-flex justify-content-center p-2 mt-5 bg-light">
      <form action="score" method="post" class="w-100" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters.join %>
      <label for="word">What is the longest word you can find?</label>
      <div class="d-flex">
        <input type="text" class="form-control w-80" id="word" name="word">
        <input type="submit" class="btn btn-primary ms-2" value="play">
      </div>
      </form>
    </div>
  </div>
</div>
